   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
       <!-- <TextView
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TieuDe"
            android:gravity="center"
            android:background="@drawable/model"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"/>-->
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/MoiChon"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#000"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">
             <ImageView
                 android:id="@+id/img_MienBac"
                 android:layout_width="match_parent"
                 android:layout_height="60dp"
                 android:src="@drawable/mienbac"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/img_MienTrung"
                android:paddingLeft="70dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/mientrung2"/>
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/img_MienNam"
                android:paddingLeft="70dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/miennam2"/>
        </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fl_Choose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:layout_margin="15dp"
            android:src="@drawable/cooking"
            android:foregroundGravity="center"/>
        <include layout="@layout/fab_layout"></include>
    </FrameLayout>


</LinearLayout>

</LinearLayout>
