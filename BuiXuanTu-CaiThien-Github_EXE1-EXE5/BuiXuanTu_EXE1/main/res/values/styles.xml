<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Number" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#673AB7</item>
        <item name="android:background">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="titleApp">
        <item name="android:background">@drawable/title</item>
        <item name="android:textColor">#FFE922</item>
        <item name="android:textSize">30dp</item>

    </style>
    <style name="txtNhap">
        <item name="android:background">@drawable/txtnhap</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#0D4D69</item>
        <item name="android:textSize">20dp </item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>

    </style>

    <style name="luu">
        <item name="android:background">@drawable/btntinh</item>
        <item name="android:layout_margin">1dp</item>
    </style>
    <style name="sang">
        <item name="android:background">#6F4A4A</item>

    </style>
    <style name="nono">
        <item name="android:background">#009688</item>
    </style>



</resources>
