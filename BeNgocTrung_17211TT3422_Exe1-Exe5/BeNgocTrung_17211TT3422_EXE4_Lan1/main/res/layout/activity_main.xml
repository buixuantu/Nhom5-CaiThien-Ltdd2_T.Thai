<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <LinearLayout
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:background="@drawable/border"
               android:orientation="vertical">

               <EditText
                   android:id="@+id/SDT"
                   android:layout_marginTop="30dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Nhập số điện thoại"
                   android:inputType="phone"></EditText>
               <ImageView
                   android:id="@+id/image_call"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/ic_phone"
                   android:layout_marginTop="40dp"
                   android:layout_gravity="center"/>
               />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="@drawable/border">

               <EditText
                   android:id="@+id/edit_Text"
                   android:layout_width="match_parent"
                   android:layout_height="60dp"
                   android:inputType="text"
                   android:hint="Nhập văn bản"/>
               <EditText
                   android:id="@+id/edit_Phone"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:inputType="phone"
                   android:hint="Nhập số điện thoại"/>
               <Button
                   android:id="@+id/btnSend"
                   android:layout_width="50dp"
                   android:layout_marginTop="17dp"
                   android:layout_height="50dp"
                   android:layout_gravity="center"
                   android:background="@drawable/ic_send_black_24dp"/>

           </LinearLayout>

       </LinearLayout>




       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="40dp"
           android:orientation="horizontal">

           <LinearLayout
               android:layout_width="200dp"
               android:layout_height="match_parent"
               android:paddingTop="10dp"
               android:background="@drawable/border"
               android:orientation="vertical">

               <ImageView
                   android:id="@+id/imgChup"
                   android:layout_width="match_parent"
                   android:layout_height="120dp"
                   android:layout_gravity="center"/>

               <Button
                   android:id="@+id/btnChup"
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_marginTop="50dp"
                   android:layout_gravity="center"
                   android:background="@drawable/ic_camera_black_24dp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="200dp"
               android:layout_height="match_parent"
               android:paddingTop="10dp"
               android:background="@drawable/border"
               android:orientation="vertical">
               <VideoView
                   android:id="@+id/VideoView"
                   android:layout_gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="130dp" />

               <Button
                   android:id="@+id/btnXem"
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_marginTop="40dp"
                   android:background="@drawable/ic_slow_motion_video_black_24dp"
                   android:layout_gravity="center"/>
           </LinearLayout>
       </LinearLayout>
   </LinearLayout>

</LinearLayout>